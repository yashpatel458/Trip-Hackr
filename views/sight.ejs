 <!--Modal window of TOO LAZY TO WRITE -->
 <div class="modal" tabindex="-1" role="dialog" id="myModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Your Details will be Visible in Dashboard âœ¨</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="email-request-form">
          <div class="form-group">
    		<label for="name">Your Name</label>
   			<input type="text" class="form-control" id="name" placeholder="Name" required>
  		  </div>
  		  <div class="form-group">
    		<label for="email">Your Personal Email (Don't worry we won't spam)</label>
   			<input type="text" class="form-control" id="email"  placeholder="Email" required>
  		  </div>
  		  <div class="form-group">
   			 <label for="message">City Name</label>
			
			<input type="text" class="form-control" id="message" placeholder="Where have you visited recently?" required>
 		  </div>
 		  <input type="submit" class="btn btn-info" data-toggle="modal" data-target="#myModal">
        </form>
      </div>
      
    </div>
  </div>
